<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="piete.ipo.MainActivity">


    <Button
        android:id="@+id/camara"
        android:layout_width="189dp"
        android:layout_height="150dp"
        android:background="@mipmap/camera"
        android:contextClickable="false"
        android:elevation="0dp"
        android:gravity="bottom|center"
        android:onClick="camara"
        android:text="Cámara"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-4dp" />

    <Button
        android:id="@+id/galeria"
        android:layout_width="189dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/camara"
        android:layout_toRightOf="@+id/camara"
        android:background="@mipmap/galeria"
        android:gravity="bottom|center"
        android:onClick="galeria"
        android:text="Galería"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="196dp"
        tools:layout_editor_absoluteY="-4dp" />

    <Button
        android:id="@+id/llamadas"
        android:layout_width="189dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/camara"
        android:background="@mipmap/llamada"
        android:gravity="bottom|center_horizontal"
        android:onClick="k"
        android:text="Llamadas"
        android:textSize="24sp" />

    <Button
        android:id="@+id/aplicaciones"
        android:layout_width="189dp"
        android:layout_height="150dp"
        android:layout_below="@+id/galeria"
        android:layout_toEndOf="@+id/llamadas"
        android:layout_toRightOf="@+id/llamadas"
        android:background="@mipmap/menu"
        android:gravity="bottom|center_horizontal"
        android:onClick="j"
        android:text="Aplicaciones"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/hora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textClock2"
        android:layout_alignBottom="@+id/textClock2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/black"
        android:textSize="40sp" />

    <TextClock
        android:id="@+id/textClock2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="40sp" />

    <Button
        android:id="@+id/radio"
        android:layout_width="189dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/llamadas"
        android:background="@mipmap/radio"
        android:gravity="bottom|center_horizontal"
        android:text="Radio"
        android:textSize="24sp" />

    <Button
        android:id="@+id/emergencia"
        android:layout_width="189dp"
        android:layout_height="150dp"
        android:layout_below="@+id/llamadas"
        android:layout_toEndOf="@+id/radio"
        android:layout_toRightOf="@+id/radio"
        android:background="@mipmap/cruzroja"
        android:text="Emergencia"
        android:textSize="22sp" />

</RelativeLayout>

