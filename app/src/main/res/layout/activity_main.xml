<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="piete.ipo.MainActivity"
    >


    <Button
        android:id="@+id/camara"
        android:layout_width="189dp"
        android:layout_height="120dp"
        android:background="@mipmap/camera"
        android:contextClickable="false"
        android:elevation="0dp"
        android:gravity="bottom|center"
        android:onClick="camara"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-4dp" />

    <Button
        android:id="@+id/galeria"
        android:layout_width="189dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/camara"
        android:layout_toRightOf="@+id/camara"
        android:background="@mipmap/galeria"
        android:gravity="bottom|center"
        android:onClick="galeria"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="196dp"
        tools:layout_editor_absoluteY="-4dp" />

    <Button
        android:id="@+id/llamadas"
        android:layout_width="189dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:background="@mipmap/llamada"
        android:gravity="bottom|center_horizontal"
        android:textSize="24sp" />

    <Button
        android:id="@+id/aplicaciones"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/llamadas"
        android:background="@mipmap/menu"
        android:gravity="bottom|center_horizontal"
        android:onClick="j"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/hora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textClock2"
        android:layout_alignBottom="@+id/textClock2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/black"
        android:textSize="35sp" />

    <TextClock
        android:id="@+id/textClock2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="35sp" />

    <Button
        android:id="@+id/radio"
        android:layout_width="189dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:background="@mipmap/radio"
        android:gravity="bottom|center_horizontal"
        android:textSize="24sp" />

    <Button
        android:id="@+id/emergencia"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_below="@+id/textView3"
        android:layout_toEndOf="@+id/radio"
        android:layout_toRightOf="@+id/radio"
        android:background="@mipmap/cruzroja"
        android:onClick="emergencia"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/camara"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp"
        android:text="Cámara"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llamadas"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_toLeftOf="@+id/emergencia"
        android:layout_toStartOf="@+id/emergencia"
        android:text="Llamadas"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_below="@+id/radio"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:text="Radio"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emergencia"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/textClock2"
        android:layout_toRightOf="@+id/textClock2"
        android:text="Emergencias"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/aplicaciones"
        android:text="Aplicaciones"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/galeria"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:text="Galería"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />




</RelativeLayout>

